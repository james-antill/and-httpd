def ui_range(start, end=None, step=None):
	"""\
	Gives numbers from start (default 1) to end, with increments of step, inclusive."""
	if end is None:
		end = start
		start = 1
	assert start <= end, "Start must be less than end."
	if step is None:
		step = 1
	return xrange(start, end + 1, step)

